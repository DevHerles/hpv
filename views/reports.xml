<odoo>

    <record id="view_report_vph_pivot" model="ir.ui.view">
        <field name="name">Report.vph.pivot</field>
        <field name="model">report.vph</field>
        <field name="arch" type="xml">
            <pivot string="Stock Level forecast" disable_linking="True">
                <field name="microred" type="row"/>
                <field name="fecha_resultado" type="col" context="{'pivot_column_groupby': ['fecha_resultado:year']}"/>
                <!-- <field name="fecha_resultado" type="col" context="{'pivot_column_groupby': ['fecha_resultado:month']}"/> -->
                <field name="resultado" type="col"/>
            </pivot>
        </field>
    </record>

