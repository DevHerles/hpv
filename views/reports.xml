<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_report_vph_pivot" model="ir.ui.view">
        <field name="name">Report.vph.pivot</field>
        <field name="model">report.vph</field>
        <field name="arch" type="xml">
            <pivot string="Reportes VPH" disable_linking="True">
                <field name="microred" type="row"/>
                <field name="establecimiento" type="row"/>
                <field name="fecha_resultado" type="col" context="{'pivot_column_groupby': ['fecha_resultado:year','microred']}"/>
                <field name="resultado" type="col"/>
            </pivot>
        </field>
    </record>

    <record id="view_stock_level_forecast_graph" model="ir.ui.view">
        <field name="name">Report.vph.graph</field>
        <field name="model">report.vph</field>
        <field name="arch" type="xml">
            <graph string="Reportes VPH" type="line">
                <field name="microred" type="row"/>
                <field name="resultado" type="col"/>
            </graph>
        </field>
    </record>

    <record id="view_stock_level_forecast_filter" model="ir.ui.view">
        <field name="name">view.report.vph.filter</field>
        <field name="model">report.vph</field>
        <field name="arch" type="xml">
            <search string="Reportes VPH">
                <field name="microred"/>
                <field name="establecimiento"/>
                <field name="paciente"/>
                <filter string="Positivos" name="positivos" domain="[('resultado','=','positivo')]"/>
                <filter string="Negativos" name="negativos" domain="[('resultado','=','negativo')]"/>
                <group expand="0" string="Agrupar por">
                    <filter name="Procedencia" context="{'group_by':'procedencia'}"/>
                    <filter name="Nacionalidad" context="{'group_by':'nacionalidad'}"/>
                    <filter name="Establecimiento" context="{'group_by':'establecimiento'}"/>
                    <filter name="Microred" context="{'group_by':'microred'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_stock_level_forecast_report_template" model="ir.actions.act_window">
        <field name="name">Reportes VPH</field>
        <field name="res_model">report.vph</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot,graph</field>
        <field name="search_view_id" ref="view_stock_level_forecast_filter"/>
        <!-- <field name="context">{'search_default_pivot_by':1, 'search_default_graph_by':1}</field> -->
    <!--     <field name="view_id" ref="view_report_vph_pivot"/> -->
    </record>

